@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid" style="padding:0;">
    <img src="~/UXImages/MainImage.jpg" class="d-block w-100 img-fluid" alt="fiut" />
</div>
<div class="container-fluid  bg-gradient gradient h-100" style="">
    <div class="row p-5 align-items-center justify-content-center">
        <div class="col-12 col-lg-6 text-center m-auto article">
            <p class="">Szukasz wymarzonej pracy?</p>
            <p class="">Z nami szukanie nie zajmie ci długo!</p>
        </div>
        <div class="col-12 col-lg-6 m-auto" style="padding-top:20px;">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="height:auto">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100 h-100" src="~/UXImages/SliderIMG1.png" alt="First slide">
                        <div class="carousel-caption d-md-block">
                            <h5>Praca zdalna</h5>
                            <p>Wiele ofert</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 h-100 img-fluid" src="~/UXImages/SliderIMG3.png" alt="Second slide">
                        <div class="carousel-caption d-md-block">
                            <h5>Praca w branży IT</h5>
                            <p>Wiele ofert</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/UXImages/SliderIMG2.png" alt="Third slide">
                        <div class="carousel-caption d-md-block">
                            <h5>Szybki kontakt z firmą!</h5>
                            <p>Dzięki funkcji aplikuj kontakt staje się duzo szybszy</p>
                        </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>
